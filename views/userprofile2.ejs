<html lang="en" ng-app="freemie">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../assets/images/freemie_icon.png">

    <title>Freemie: <%= data.otherUser.username %></title>

    <!-- Bootstrap core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/assets/css/userprofile.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- Navigation -->
    <navbar></navbar>

    <div class="container">
        <div class="col-lg-12 col-sm-12">
            <div class="card hovercard">
                <div class="card-background">
                    <img class="card-bkimg" alt="" src=<%= data.otherUser.profile_pic %>>
                </div>
            <div class="useravatar">
                <img alt="" src=<%= data.otherUser.profile_pic %>>
            </div>
            <div class="card-info"> 
                <span class="card-title"><%=data.otherUser.first_name %> <%=data.otherUser.last_name %></span>
            </div>
        </div>
        <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <div class="hidden-xs">
                        Owns
                    </div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
                <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                    <div class="hidden-xs">
                        Wants
                    </div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    <div class="hidden-xs">
                        Board
                    </div>
                </button>
            </div>
        </div>
    </div>

    <div class="well">
        <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1">
                <profileitems profileitems="profileitems"></profileitems>
            </div>
            <div class="tab-pane fade in" id="tab2">
                <!--<div class="container" style="margin-top:50px;">-->
                <% for(var i=0; i<data.otherUserItemsWanted.length; i++) {%>
                    <% if (i%4 == 0) { %>
                    <div class="row">
                    <% } %>

                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="col-item">
                                <div class="post-img-content">
                                    <img src="<%= data.otherUserItemsWanted[i].photo %>" class="img-responsive" />
                                    <span class="round-tag"><center><%= data.otherUserItemsWanted[i].numberofWants %></center></span>
                                </div>
                                <div class="info">
                                    <div class="row">
                                        <div class="priceleft col-md-6">
                                            <h5> <%= data.otherUserItemsWanted[i].title %></h5>
                                            
                                        </div>
                                        <div class="priceright col-md-6">
                                            <a class="price-text-color" href="/user/<%=data.otherUserItemsWanted[i].giver_id._id%>"><%= data.otherUserItemsWanted[i].giver_id.username %></a>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="rating hidden-sm col-md-12">
                                        <h5 class="price-text-color"><%= data.otherUserItemsWanted[i].description %></h5>
                                        </div>
                                    </div>
                                    <div class="separator clear-left">
                                        
                                        <% if (mine) { %>
                                            <div class="btn-add">
                                                <form action="/item/<%= data.otherUserItemsWanted[i]._id%>/dounwant/<%= data.otherUser._id %>" method="post" class="hidden-sm">
                                                    <div class="btn-holder">
                                                        <button name="unwant" value="unwant" class="hidden-sm">Unwant</button>
                                                    </div>
                                                </form>
                                            </div>
                                        <% } else { %>
                                            <% if (data.otherUserItemsWanted[i].ownedByUser) { %>
                                                <p class="btn-details">
                                                    <i class="fa fa-list"></i><a href="/item/<%= data.otherUserItemsWanted[i]._id %>/edit/" class="hidden-sm">Edit Item</a>
                                                </p>
                                            <% } else if (!data.otherUserItemsWanted[i].wantedByUser) { %>
                                                <div class="btn-add">   
                                                    <form action="/item/<%= data.otherUserItemsWanted[i]._id%>/dowant/<%= data.otherUser._id %>" method="post" class="hidden-sm">
                                                        <div class="btn-holder">
                                                            <button name="want" value="want" class="hidden-sm">Want</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            <% } else { %>
                                                <div class="btn-add">
                                                    <form action="/item/<%= data.otherUserItemsWanted[i]._id%>/dounwant/<%= data.otherUser._id %>" method="post" class="hidden-sm">
                                                        <div class="btn-holder">
                                                            <button name="unwant" value="unwant" class="hidden-sm">Unwant</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            <% }%>
                                        <% } %>
                                        
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="/item/<%= data.otherUserItemsWanted[i]._id%>" class="hidden-sm">Details</a></p>
                                    </div>
                                    <div class="clearfix">
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% if ((i+1)%4 == 0 || i == data.otherUserItemsWanted.length-1) { %>
                    </div>
                    <% } %>
                <% } %>

            </div>
            <div class="tab-pane fade in" id="tab3">
                <h3>Tells you what items you've taken, what items you've given, thank you messages etc.</h3>
            </div>
        </div>
    </div>

<script src="/assets/js/vendor/angular.js"></script>
<script src="/assets/js/vendor/angular-route.js"></script>
<script src="/assets/js/vendor/angular-resource.js"></script>
<script src="/assets/js/vendor/localStorageService.js"></script>
<script>
    angular.module('items.data', []).constant('items', <%- JSON.stringify(data.otherUserItemsOwned) %>);
</script>
<script>
    angular.module('profileitems.data', []).constant('profileitems', <%- JSON.stringify(data.otherUserItemsOwned) %>);
</script>
<script>
   angular.module('index.data', []).constant('userId', '<%= user._id %>');
</script>

<script src="/assets/js/app.js"></script>
<script src="/assets/js/vendor/jquery.js"></script>
<script src="/assets/js/vendor/bootstrap.min.js"></script>
<script src="/assets/js/app/userprofile.js"></script>
<script src="/assets/js/directives/profileitems.js"></script>
<script src="/assets/js/directives/items.js"></script>
<script src="/assets/js/directives/navbar.js"></script>
<script src="/assets/js/vendor/localStorageService.js"></script>

<script>
$(function() {
    $(document).on("click", ".want", function() {
        var data = $(this).data('itemid');
        var url = "/item/" + data + "/dowant/0"
        console.log(url);
        $.post(url, function(resp) {
        });
    });
});
$(function() {
    $(document).on("click", ".unwant", function() {
        var data = $(this).data('itemid');
        var url = "/item/" + data + "/dounwant/0"
        console.log(url);
        $.post(url, function(resp) {
        });
    });
});
</script>

</body>
</html>
            
    