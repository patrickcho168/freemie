<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../assets/freemie_icon.png">

    <title>Freemie: <%= data.otherUser.username %></title>

    <!-- Bootstrap core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/assets/userprofile.css" rel="stylesheet">
    <script src="/assets/jquery-1.11.3.min.js"></script>
    <script src="/assets/userprofile.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Start Bootstrap</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Services</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <div class="container">
        <div class="col-lg-12 col-sm-12">
            <div class="card hovercard">
                <div class="card-background">
                    <img class="card-bkimg" alt="" src=<%= data.otherUser.profile_pic %>>
                </div>
            <div class="useravatar">
                <img alt="" src=<%= data.otherUser.profile_pic %>>
            </div>
            <div class="card-info"> 
                <span class="card-title"><%=data.otherUser.first_name %> <%=data.otherUser.last_name %></span>
            </div>
        </div>
        <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <div class="hidden-xs">
                        Owns
                    </div>
                </button>
            </div>
        <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                <div class="hidden-xs">
                    Wants
                </div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">
                    Following
                </div>
            </button>
        </div>
    </div>

    <div class="well">
        <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1">
                <!--<div class="container" style="margin-top:50px;">-->
                <% for(var i=0; i<data.otherUserItemsOwned.length; i++) {%>
                    <% if (i%4 == 0) { %>
                    <div class="row">
                    <% } %>

                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="col-item">
                                <div class="post-img-content">
                                    <img src="<%= data.otherUserItemsOwned[i].photo %>" class="img-responsive" />
                                    <span class="round-tag"><center><%= data.otherUserItemsOwned[i].numberofWants %></center></span>
                                </div>
                                <div class="info">
                                    <div class="row">
                                        <div class="priceleft col-md-6">
                                            <h5> <%= data.otherUserItemsOwned[i].title %></h5>
                                            
                                        </div>
                                        <div class="priceright col-md-6">
                                            <h5 class="price-text-color">FREE</h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="rating hidden-sm col-md-12">
                                        <h5 class="price-text-color"><%= data.otherUserItemsOwned[i].description %></h5>
                                        </div>
                                    </div>
                                    <div class="separator clear-left">
                                        <div class="btn-add">
                                        <% if (mine) { %>
                                            <!-- <i class="fa fa-shopping-cart"></i> -->
                                            <a href="/item/<%= data.otherUserItemsOwned[i].id%>/edit/" class="hidden-sm">Edit Item</a>
                                        <% } else { %>
                                            <% if (!data.otherUserItemsOwned[i].wantedByUser) { %>
                                                <form action="/item/<%= data.otherUserItemsOwned[i].id%>/dowant/<%= data.otherUser.id %>" method="post" class="hidden-sm">
                                                    <div class="btn-holder">
                                                        <button name="want" value="want" class="hidden-sm">Want</button>
                                                    </div>
                                                </form>
                                            <% } else { %>
                                                <form action="/item/<%= data.otherUserItemsOwned[i].id%>/dounwant/<%= data.otherUser.id %>" method="post" class="hidden-sm">
                                                    <div class="btn-holder">
                                                        <button name="unwant" value="unwant" class="hidden-sm">Unwant</button>
                                                    </div>
                                                </form>
                                            <% }%>
                                        <% } %>
                                        </div>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="/item/<%= data.otherUserItemsOwned[i].id%>" class="hidden-sm">More details</a></p>
                                    </div>
                                    <div class="clearfix">
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% if ((i-1)%4 == 0 || i == data.otherUserItemsOwned.length-1) { %>
                    </div>
                    <% } %>
                <% } %>


                <table border = "1">
                <% for(var i=0; i<data.otherUserItemsOwned.length; i++) {%>
                <tr>
                    <td><a href="/item/<%= data.otherUserItemsOwned[i].id%>"><%= data.otherUserItemsOwned[i].title %></a></td>
                    <td><%= data.otherUserItemsOwned[i].description %></td>
                    <td><img src=<%= data.otherUserItemsOwned[i].photo %> alt="item pic" height="90" width="90"> </img> </td>
                    <td><%= data.otherUserItemsOwned[i].time_posted %></td>
                    <td><%= data.otherUserItemsOwned[i].numberofWants %></td>
                    <!-- Complex logic depending on whether or not user is himself-->
                    <% if (mine) { %>
                        <td>EDIT ITEM</td>
                    <% } else { %>
                        <td>
                        <% if (!data.otherUserItemsOwned[i].wantedByUser) { %>
                            <form action="/item/<%= data.otherUserItemsOwned[i].id%>/dowant/<%= data.otherUser.id %>" method="post">
                                <button name="want" value="want"><strong>Want</strong></button>
                            </form>
                        <% } else { %>
                            <form action="/item/<%= data.otherUserItemsOwned[i].id%>/dounwant/<%= data.otherUser.id %>" method="post">
                                <button name="unwant" value="unwant"><strong>Unwant</strong></button>
                            </form>
                        <% }%>
                        </td>
                    <% } %>
                    <!-- End Complex Logic -->
                    </tr>
                    <% } %>
                </table>
            </div>
            <div class="tab-pane fade in" id="tab2">
                <table border = "1">
                    <% for(var i=0; i<data.otherUserItemsWanted.length; i++) {%>
                <tr>
                    <td><a href="/item/<%= data.otherUserItemsWanted[i].what.id%>"><%= data.otherUserItemsWanted[i].what.title %></a></td>
                    <td><%= data.otherUserItemsWanted[i].what.description %></td>
                    <td><img src=<%= data.otherUserItemsWanted[i].what.photo %> alt="item pic" height="90" width="90"> </img> </td>
                    <td><%= data.otherUserItemsWanted[i].what.time_posted %></td>
                    <td><%= data.otherUserItemsWanted[i].numberofWants %></td>

                    <!-- Complex logic depending on whether or not user is himself-->
                    <% if (mine) { %>
                        <td>
                            <form action="/item/<%= data.otherUserItemsWanted[i].what.id%>/dounwant/<%= data.otherUser.id %>" method="post">
                                <button name="unwant" value="unwant"><strong>Unwant</strong></button>
                            </form>
                        </td>
                    <% } else if (data.otherUserItemsWanted[i].what.giver_id == user.id) { %>
                        <td>
                        </td>
                    <% } else { %>
                        <td>
                        <% if (!data.otherUserItemsWanted[i].wantedByUser) { %>
                            <form action="/item/<%= data.otherUserItemsWanted[i].what.id%>/dowant/<%= data.otherUser.id %>" method="post">
                                <button name="want" value="want"><strong>Want</strong></button>
                            </form>
                        <% } else { %>
                            <form action="/item/<%= data.otherUserItemsWanted[i].what.id%>/dounwant/<%= data.otherUser.id %>" method="post">
                                <button name="unwant" value="unwant"><strong>Unwant</strong></button>
                            </form>
                        <% }%>
                        </td>
                    <% } %>
                    <!-- End Complex Logic -->
                </tr>
                 <% } %>
                </table>
            </div>
            <div class="tab-pane fade in" id="tab3">
                <h3>This is tab 3</h3>
            </div>
        </div>
    </div>
    
    </div>
</div>
</body>
</html>
            
    